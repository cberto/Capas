@model CapaPrincipal.Models.CEProveedorModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alta</title>
</head>
<body>
    <div class="col-lg-12">
        @if (@Model.Proveedor.Id == 0)
        {
            <h4>Crear nuevo proveedor</h4>
        }
        else
        {
            <h4>Editar proveedor</h4>
        }
    </div>
    
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
    
        <fieldset>
        <legend>Proveedor</legend>

        @Html.HiddenFor(model => model.Proveedor.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.RazonSocial)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.RazonSocial)
            @Html.ValidationMessageFor(model => model.Proveedor.RazonSocial)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.NombreFantasia)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.NombreFantasia)
            @Html.ValidationMessageFor(model => model.Proveedor.NombreFantasia, "", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.Cuit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.Cuit)
            @Html.ValidationMessageFor(model => model.Proveedor.Cuit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.CodigoPostal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.CodigoPostal)
            @Html.ValidationMessageFor(model => model.Proveedor.CodigoPostal)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.Telefono)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.Telefono)
            @Html.ValidationMessageFor(model => model.Proveedor.Telefono)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.Email)
            @Html.ValidationMessageFor(model => model.Proveedor.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.DescripcionIva)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Proveedor.CodigoIva, Model.ListaCondicionesIva.Select(x => new SelectListItem { Text = x.Text, Value = x.Value }), new { style = "width:12%;" })
            @Html.ValidationMessageFor(model => model.Proveedor.CodigoIva, "", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Proveedor.Contacto)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Proveedor.Contacto)
            @Html.ValidationMessageFor(model => model.Proveedor.Contacto)
        </div>

        <p>
            <input type="submit" value="Save" class="btn btn-default" />
        </p>
    </fieldset>
    }
    
</body>
</html>
